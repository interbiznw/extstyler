{
  "name": "Extsyler",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Load Custom CSS in top of web pages",
  "default_locale": "en",
  "icons" : {
    "16": "icons/icon16.png",
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "page_action": {
    "default_icon": { "19": "icons/icon19.png" },
    "default_title": "Extsyler"
  },

  "permissions": [
    "tabs"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["src/custom.css"],
      "js": ["src/extstyler.js"]
    }
  ]

}